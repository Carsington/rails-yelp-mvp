<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <div class="d-flex justify-content-between align-items-center bg-light p-2 rounded-bottom border">
      <h2><%= link_to 'home', restaurants_path , { class: "text-dark text-decoration-none" } %></h2>
      <%= link_to 'New restaurant', new_restaurant_path , { class: "btn btn-primary" } %>
    </div>
    <%= yield %>
    <%= javascript_include_tag "application" %>
    <%= javascript_pack_tag "application" %>


  </body>
</html>
